@model EntityLayer.Dto.WriterLoginDto
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <title>Yazar İşlemleri</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-19/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Yazar Kayıt Sayfası</h2>


                </div>

            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center" style="background-image: url(/AdminLTE-3.0.4/login-form-19/images/bg.jpg);"></div>
                        <h3 class="text-center mb-0">Hoş Geldiniz</h3>
                        <p class="text-center" style="color:red">@ViewData["ErrorMessage"]</p>
                        @using (Html.BeginForm("WriterRegister", "Register", FormMethod.Post))
                        {
                            <div class="form-group">
                                <input type="text" class="form-control" name="WriterName" placeholder="İsim">
                            
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="WriterSurname" placeholder="Soyisim">
                       
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="WriterMail" placeholder="Mail" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" type="password" class="form-control" name="WriterPassword" placeholder="Parola" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Kayıt Ol</button>
                            </div>

                            <div class="w-100 text-center mt-4 text">

                                <a href="/Home/HomePage/">Ana Sayfaya Git</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>


    <script src="~/AdminLTE-3.0.4/login-form-19/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-19/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-19/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-19/js/main.js"></script>

</body>
</html>